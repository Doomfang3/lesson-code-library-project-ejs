<%#!-- views/books/books-list.ejs --%>

<h1>BOOKS</h1>

<%#!-- since we passed allTheBooksFromDB as `books`, we can iterate over it here with #each--%> <%
books.forEach(book => { %>
<div>
  <h3><%= book.title %></h3>
  <p>By: <%= book.author %></p>
  <%#!-- additional book property --%> <a href="/books/<%= book._id %>">See details</a> <%#!-- link
  that points to the details page --%> <a href="/books/<%= book._id %>/edit">Edit</a> <%#!-- link to
  redirect to the edit form for each specific book --%> <%#!-- add the form to handle the POST
  request to remove a specific book --%>
  <form action="/books/<%_id%>/delete" method="POST">
    <button>Delete</button>
  </form>
</div>
<% }) %>
